{
    "name": "@postcraft/template-builder",
    "version": "0.0.1",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./styles": "./dist/styles/globals.css"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "next dev",
        "build:next": "next build",
        "build:package": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom --external next",
        "build": "pnpm run build:package",
        "start": "next start",
        "lint": "eslint src/",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "peerDependencies": {
        "next": "^14.0.0 || ^15.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.1",
        "@tailwindcss/postcss": "^4.1.17",
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.39.1",
        "eslint-config-next": "^16.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "next": "^15.0.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "tailwindcss": "^4.1.17",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.46.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@tiptap/core": "^3.10.4",
        "@tiptap/extension-color": "^3.10.4",
        "@tiptap/extension-image": "^3.10.4",
        "@tiptap/extension-link": "^3.10.4",
        "@tiptap/extension-placeholder": "^3.10.4",
        "@tiptap/extension-text-align": "^3.10.4",
        "@tiptap/extension-text-style": "^3.10.4",
        "@tiptap/react": "^3.10.4",
        "@tiptap/starter-kit": "^3.10.4",
        "@tiptap/suggestion": "^3.10.4",
        "tippy.js": "^6.3.7"
    }
}
