{
    "name": "@postcraft/template-builder",
    "version": "1.0.0",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./styles": "./dist/styles/globals.css"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "next dev",
        "build:next": "next build",
        "build:package": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom --external next",
        "build": "npm run build:package",
        "start": "next start",
        "lint": "eslint src/",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "peerDependencies": {
        "next": "^14.0.0 || ^15.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "eslint": "^8.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "next": "^15.0.0",
        "prettier": "^3.6.2",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
