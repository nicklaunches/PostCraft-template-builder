        "@tailwindcss/postcss": "^4.1.17",
        "@types/deep-equal": "^1.0.4",
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "tailwindcss": "^4.1.17",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.46.3",
        "vite": "^6.0.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
