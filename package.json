        "preview": "vite preview",
        "lint": "eslint src/",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
